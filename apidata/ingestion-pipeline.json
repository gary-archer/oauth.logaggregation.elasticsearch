{
  "description": "Ingest Pipeline for API Logs",
  "processors": [
    {
      "drop": {
        "if" : "ctx.type != 'request' && ctx.type != 'audit'"
      },
      "script": {
        "lang": "painless",
        "description": "Use a client side unique id to prevent duplicates",
        "source": "ctx._id = ctx.id"
      },
      "date" : {
        "field" : "utcTime",
        "formats" : ["ISO8601"]
      },
      "remove": {
        "field": ["log", "stream", "type", "fields"],
        "ignore_missing": true
      }
    }
  ]
}
